.container{
  width: 100%;
  height:100%;
  position: fixed;
  background-size:100% 100%;
  background-repeat: no-repeat;
  background-image: url(https://cdn.jsdelivr.net/gh/fnoi2014xtx/TsinghuaSS@1.3/static/background.png);
}
.container2{
  width: 70%;
  height: 60%;
  margin-top: 30%;
  transform: translate(0,0);
  left: 50%;
  top:50%;
}
.text{
  font-size: 1rem;
  padding-top: 10px;
  padding-bottom: 10px;
  color:gray;
}
.bar{
  margin: 0 auto;
  width: 100%;
  position: relative;
}
input{
  font-size: 1.3rem;
  padding-left: 1rem;
  padding-right: 6rem;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  height: 2rem;
  border: 1px solid rgb(113,197,244);/*rgb(6, 174, 86);*/
  border-radius: 1.5rem;
}
.confirm{
  height: 2rem;
  position: absolute;
  top: 0rem;
  right: 0rem;
  padding-left: 1rem;
  padding-right: 1rem;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  font-size: 1.3rem;
  font-weight: bold;
  color: rgb(113,197,244);/*rgb(6, 174, 86);*/
  border:1px solid rgb(113,197,244);/*rgb(6, 174, 86);*/
  border-radius: 0rem 1.5rem 1.5rem 0rem;
  width: 3rem;
  text-align: center;
}
.confirm:active{
  background-color: lightgray;
}
